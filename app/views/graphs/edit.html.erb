<div class="error">
  <% flash.each do |name, msg| %>
    <%= msg %>
  <% end %>
</div>

<br>
<div class="row">
  <div class="form center">
    <h5>Title: <%= @graph.title %> </h5>
    <%= form_for @graph do |f| %>
        Title: <%= f.text_field :title %><br>
        Job Categories<br><%= collection_check_boxes(:search_categories, :name, JobCategory.all, :name, :name) %><br><br>
        Display Graph Axis By : <%= f.select(:x_axis, [['By Job Category', 'category'], ['By Company City', 'city'], ['By Post Date', 'post_date'],
          ['By Company Country', 'country']]) %><br>
        Graph Type: <%= f.select(:graph_type, [['Bar Graph','bar'], ['Pie Graph','pie'], ['Line Graph','line'], ['Column Graph','column']]) %><br>
        <%= f.submit "Update Graph", class: "btn" %>
    <% end %>
  </div>
</div>
