<% content_for :head do %>
<style>
nav {
  background-color: transparent;
  box-shadow: none;
  text-shadow: 1px 1px 5px black;
}
body {
  background-color: #111111;
  color: #EFF9F0;
}
</style>
<% end %>

<div class="container-header">
  <div class="text-container">
    <div class="text-header">
      <h4 class="text-header-title">WEB DEVELOPMENT CAREER VISUALIZATIONS</h4><br>
      <p>Provided by us. Customized by you</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col s12 text-hcenter">
      <h5>ABOUT<span class="text-prim-color"> VIZ.DATA</span></h5>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m4">
      <h6 class="text-title-bold">we turn data into graphical content</h6>
      <p>For each user we provide the tools needed to convert your desired job listings into a readable format that can be easily visalized. Job information is up to date and current; it is provided by <a href="https://authenticjobs.com/">authenticjobs.com</a>. This site is intended to assist you in understanding the market trends, availability, and where to look for your next job.</p>
    </div>
    <div class="col s12 m4 viz-margin">
      <h6 class="text-title-bold">our specializations:</h6><br>
      <img src="/assets/icon_job_01.png" class="icon">
      <p class=" text-subtitle-bold">CAREERS</p>
      <img src="/assets/icon_job_trends_01.png" class="icon">
      <p class=" text-subtitle-bold">TRENDS</p>
    </div>
    <div class="col s12 m4 viz-about-col">
    </div>
  </div>
  <div class="viz-row-cover" style="position: relative">
    <div class="strip-header">
      <h5>OUR<span class="text-prim-color"> INFORMATION</span></h5>
    </div>
    <div class="row strip-row">
      <div class="col s4 m2 strip strip-1">
        <%= link_to "BACK END WEB DEVELOPMENT", href="#def-back", class: "strip-vert-text modal-trigger"%>
        <div class="viz-transparent">
        </div>
      </div>
      <div class="col s4 m2 strip strip-2">
        <%= link_to "FRONT END WEB DEVELOPMENT", href="#def-front", class: "strip-vert-text modal-trigger" %>
        <div class="viz-transparent">
        </div>
      </div>
      <div class="col s4 m2 strip strip-3">
        <%= link_to "PRODUCT MANAGEMENT", href="#def-prod-man", class: "strip-vert-text modal-trigger" %>
        <div class="viz-transparent">
        </div>
      </div>
      <div class="col s4 m2 strip strip-4">
        <%= link_to "UX DESIGN", href="#def-ux", class: "strip-vert-text modal-trigger"  %>
        <div class="viz-transparent">
        </div>
      </div>
      <div class="col s4 m2 strip strip-5">
        <%= link_to "MARKETING", href="#def-marketing", class: "strip-vert-text modal-trigger"  %>
        <div class="viz-transparent">
        </div>
      </div>
      <div class="col s4 m2 strip strip-6">
        <%= link_to "MANAGEMENT", href="#def-management", class: "strip-vert-text modal-trigger"  %>
        <div class="viz-transparent">
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal-for-show">
  <div id="def-back" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_back_end"%>
    </div>
  </div>
  <div id="def-front" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_front_end"%>
    </div>
  </div>
  <div id="def-prod-man" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_prod_man"%>
    </div>
  </div>
  <div id="def-ux" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_ux"%>
    </div>
  </div>
  <div id="def-marketing" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_marketing"%>
    </div>
  </div>
  <div id="def-management" class="modal center-align">
    <div class="modal-content">
      <%= render partial: "layouts/def_management"%>
    </div>
  </div>
</div>
